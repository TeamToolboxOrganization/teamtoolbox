{% extends 'basev2.html.twig' %}

{% block title %}Demande de congés{% endblock %}

{% block current_page_name %}Demande de congés{% endblock %}

{% block contentHeaderTitle %}<h1 class="m-0">{{ 'vacation.btn.requestVacation' | trans }}</h1>{% endblock %}
{% block breadcrumb %}{% endblock %}

{% block contextual_menu %}
    {% if  userId is not empty %}
        <li class="nav-item d-none d-sm-inline-block">
            <a id="endlink1" href="{{ path('collab_index', {userId: userId}) }}" class="nav-link"><i class="fas fa-users"></i> Revenir à la page collab</a>
        </li>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('vacation') }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('vacation') }}
{% endblock %}

{% block body %}

    <div class="container main_text_color">
        {% for message in app.flashes('success') %}
            <div class="alert alert-primary" role="alert">
                {{ message | trans }}
            </div>
        {% endfor %}

        <div class="container">
            <div class="row d-flex justify-content-around">
                <p class="col-3 text-center vacationsCounter">{{ 'vacation.CPFLeft' | trans }} : {{ vacationsLeft.CPF }}</p>
                <p class="col-3 text-center vacationsCounter">{{ 'vacation.RTTLeft' | trans }} : {{ vacationsLeft.RTT }}</p>
            </div>
        </div>

        <div class="container">
        {{ form_start(form) }}
            <div class="row">
                <div class="col-sm-12">
                    {{ form_row(form.type) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    {{ form_row(form.startAt) }}
                    {{ form_row(form.startAtPm) }}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.endAt) }}
                    {{ form_row(form.endAtAm) }}
                </div>
            </div>
            <div class="text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save" aria-hidden="true"></i> {{ 'vacation.requestVacation' | trans }}
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}


<html>
    <head>
        <title>Vote</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script>
            function updateBgColor(color) {
                document.getElementById("bodypage").setAttribute("style", "background-color: " + color);
            }
        </script>
    </head>
    <body id="bodypage" style="background-color: currentColor">
        <div class="row">
            <div class="d-grid gap-2 ">
                <button type="button" class="btn btn-danger btn-lg" style="font-size: 4rem;" onclick="updateBgColor('red')">Rouge</button>
                <button type="button" class="btn btn-primary btn-lg" style="font-size: 4rem;" onclick="updateBgColor('blue')">Bleu</button>
                <button type="button" class="btn btn-success btn-lg" style="font-size: 4rem;" onclick="updateBgColor('green')">Vert</button>
                <button type="button" class="btn btn-warning btn-lg" style="font-size: 4rem;" onclick="updateBgColor('yellow')">Jaune</button>
            </div>
        </div>
    </body>
</html>


